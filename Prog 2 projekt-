#ifndef HEADER_H
#define HEADER_H

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
    int id;
    char ime[50];
    char prezime[50];
    int godine;
    float visina;
    float tezina;
} Clan;

typedef enum {
    DODAJ_CLANA = 1,
    PREGLED_CLANOVA,
    AZURIRAJ_CLANA,
    OBRISI_CLANA,
    PRETRAZI_PREZIME,
    IZLAZ
} IzbornikOpcije;

extern Clan* clanovi;
extern size_t broj_clanova;
extern const char* DATOTEKA;

void ocisti_ulazni_buffer(void);

int ucitaj_clanove();
int spremi_clanove();
int dodaj_clana();
int pregled_clanova();
int azuriraj_clana();
int obrisi_clana();
int pretrazi_po_prezimenu();
int prikazi_izbornik();

#endif
